# Environment Configuration for Persuasion-Aware MUSE Pipeline
# Copy this file to .env and fill in your API keys

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.2

# Alternative: Anthropic Claude
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# ANTHROPIC_MODEL=claude-3-opus-20240229

# Triple Store Configuration (optional)
TRIPLESTORE_ENDPOINT=http://localhost:7200/repositories/persuasion
TRIPLESTORE_USERNAME=admin
TRIPLESTORE_PASSWORD=admin

# Web Search API (for evidence retrieval)
# SERPAPI_KEY=your_serpapi_key_here
# GOOGLE_SEARCH_API_KEY=your_google_api_key_here
# GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# Wikidata SPARQL Endpoint
WIKIDATA_ENDPOINT=https://query.wikidata.org/sparql

# Pipeline Configuration
CONFIDENCE_THRESHOLD=0.6
BATCH_SIZE=5
MAX_RETRIES=3
RETRY_DELAY=2

# Logging
LOG_LEVEL=INFO
LOG_FILE=pipeline.log
