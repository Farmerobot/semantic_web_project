@prefix : <http://example.org/persuasion#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix wd: <http://www.wikidata.org/entity/> .

# Ontology Metadata
: a owl:Ontology ;
    dc:title "Persuasion-Aware Social Media Ontology" ;
    dc:description "An ontology for modeling persuasion techniques and misinformation in social media posts" ;
    dc:creator "Semantic Web Project" ;
    dcterms:created "2025-01-03"^^xsd:date ;
    owl:versionInfo "2.0" .

# ========================================
# CORE CLASSES
# ========================================

:InformationUnit a owl:Class ;
    rdfs:label "Information Unit" ;
    rdfs:comment "Abstract base class for any unit of information that can be analyzed for persuasion" .

:Post a owl:Class ;
    rdfs:subClassOf :InformationUnit ;
    rdfs:label "Social Media Post" ;
    rdfs:comment "A social media post that may contain claims and persuasion techniques" .

:Claim a owl:Class ;
    rdfs:subClassOf :InformationUnit ;
    rdfs:label "Claim" ;
    rdfs:comment "A factual assertion made in a post that can be verified" .

:Evidence a owl:Class ;
    rdfs:label "Evidence" ;
    rdfs:comment "Source or proof supporting or refuting a claim" .

:Entity a owl:Class ;
    rdfs:label "Entity" ;
    rdfs:comment "A real-world entity (person, organization, location, etc.) mentioned in a post" .

:Person a owl:Class ;
    rdfs:subClassOf :Entity ;
    rdfs:label "Person" ;
    rdfs:comment "A human individual mentioned in content" .

:Organization a owl:Class ;
    rdfs:subClassOf :Entity ;
    rdfs:label "Organization" ;
    rdfs:comment "A company, institution, or group" .

:Location a owl:Class ;
    rdfs:subClassOf :Entity ;
    rdfs:label "Location" ;
    rdfs:comment "A geographical place or region" .

:Event a owl:Class ;
    rdfs:subClassOf :Entity ;
    rdfs:label "Event" ;
    rdfs:comment "A notable occurrence or happening" .

:Correction a owl:Class ;
    rdfs:label "Correction" ;
    rdfs:comment "A structured correction of misinformation in a post" .

:PersuasionAnnotation a owl:Class ;
    rdfs:label "Persuasion Annotation" ;
    rdfs:comment "An annotation linking a claim to a detected persuasion technique with confidence score" .

:Source a owl:Class ;
    rdfs:label "Source" ;
    rdfs:comment "An information source that can be assessed for credibility" .

:Sentiment a owl:Class ;
    rdfs:label "Sentiment" ;
    rdfs:comment "Emotional tone or attitude expressed in content" .

:PositiveSentiment a owl:Class ;
    rdfs:subClassOf :Sentiment ;
    rdfs:label "Positive Sentiment" .

:NegativeSentiment a owl:Class ;
    rdfs:subClassOf :Sentiment ;
    rdfs:label "Negative Sentiment" .

:NeutralSentiment a owl:Class ;
    rdfs:subClassOf :Sentiment ;
    rdfs:label "Neutral Sentiment" .

# ========================================
# PERSUASION TECHNIQUE CLASSES
# ========================================

:PersuasionTechnique a owl:Class ;
    rdfs:label "Persuasion Technique" ;
    rdfs:comment "A strategy used to influence opinion through manipulation" .

:FearAppeal a owl:Class ;
    rdfs:subClassOf :PersuasionTechnique ;
    rdfs:label "Fear Appeal" ;
    rdfs:comment "Technique that uses fear to influence behavior or beliefs" .

:LoadedLanguage a owl:Class ;
    rdfs:subClassOf :PersuasionTechnique ;
    rdfs:label "Loaded Language" ;
    rdfs:comment "Use of emotionally charged words to influence opinion" .

:AppealToAuthority a owl:Class ;
    rdfs:subClassOf :PersuasionTechnique ;
    rdfs:label "Appeal to Authority" ;
    rdfs:comment "Citing authority figures to lend credibility without proper evidence" .

:Scapegoating a owl:Class ;
    rdfs:subClassOf :PersuasionTechnique ;
    rdfs:label "Scapegoating" ;
    rdfs:comment "Blaming a person or group for problems they didn't cause" .

:Exaggeration a owl:Class ;
    rdfs:subClassOf :PersuasionTechnique ;
    rdfs:label "Exaggeration/Minimization" ;
    rdfs:comment "Overstating or understating facts to manipulate perception" .

:AdHominem a owl:Class ;
    rdfs:subClassOf :PersuasionTechnique ;
    rdfs:label "Ad Hominem" ;
    rdfs:comment "Attacking the person making the argument rather than the argument itself" .

:FalseDilemma a owl:Class ;
    rdfs:subClassOf :PersuasionTechnique ;
    rdfs:label "False Dilemma" ;
    rdfs:comment "Presenting only two options when more exist" .

:HastyGeneralization a owl:Class ;
    rdfs:subClassOf :PersuasionTechnique ;
    rdfs:label "Hasty Generalization" ;
    rdfs:comment "Drawing broad conclusions from limited examples" .

:AppealToRidicule a owl:Class ;
    rdfs:subClassOf :PersuasionTechnique ;
    rdfs:label "Appeal to Ridicule" ;
    rdfs:comment "Mocking or ridiculing an argument to discredit it" .

:Whataboutism a owl:Class ;
    rdfs:subClassOf :PersuasionTechnique ;
    rdfs:label "Whataboutism" ;
    rdfs:comment "Deflecting criticism by pointing to others' faults" .

:Bandwagon a owl:Class ;
    rdfs:subClassOf :PersuasionTechnique ;
    rdfs:label "Bandwagon" ;
    rdfs:comment "Appealing to popularity as proof of truth" .

:AppealToEmotion a owl:Class ;
    rdfs:subClassOf :PersuasionTechnique ;
    rdfs:label "Appeal to Emotion" ;
    rdfs:comment "Using emotional manipulation instead of logical argument" .

# ========================================
# VERIFICATION STATUS
# ========================================

:VerificationStatus a owl:Class ;
    rdfs:label "Verification Status" ;
    rdfs:comment "Status of claim verification" .

:True a owl:Class ;
    rdfs:subClassOf :VerificationStatus ;
    rdfs:label "True" .

:False a owl:Class ;
    rdfs:subClassOf :VerificationStatus ;
    rdfs:label "False" .

:MostlyTrue a owl:Class ;
    rdfs:subClassOf :VerificationStatus ;
    rdfs:label "Mostly True" .

:MostlyFalse a owl:Class ;
    rdfs:subClassOf :VerificationStatus ;
    rdfs:label "Mostly False" .

:Unverified a owl:Class ;
    rdfs:subClassOf :VerificationStatus ;
    rdfs:label "Unverified" .

:Misleading a owl:Class ;
    rdfs:subClassOf :VerificationStatus ;
    rdfs:label "Misleading" .

# ========================================
# OBJECT PROPERTIES
# ========================================

:containsClaim a owl:ObjectProperty ;
    rdfs:label "contains claim" ;
    rdfs:domain :Post ;
    rdfs:range :Claim .

:usesTechnique a owl:ObjectProperty ;
    rdfs:label "uses technique" ;
    rdfs:domain :Claim ;
    rdfs:range :PersuasionTechnique ;
    rdfs:comment "Links a claim to the persuasion technique it employs" .

:targetsEntity a owl:ObjectProperty ;
    rdfs:label "targets entity" ;
    rdfs:domain :Claim ;
    rdfs:range :Entity ;
    rdfs:comment "Identifies the entity that is the subject of manipulation" .

:supportedBy a owl:ObjectProperty ;
    rdfs:label "supported by" ;
    rdfs:domain :Claim ;
    rdfs:range :Evidence ;
    rdfs:comment "Links a claim to supporting or refuting evidence" .

:refutedBy a owl:ObjectProperty ;
    rdfs:label "refuted by" ;
    rdfs:domain :Claim ;
    rdfs:range :Evidence .

:hasVerificationStatus a owl:ObjectProperty, owl:FunctionalProperty ;
    rdfs:label "has verification status" ;
    rdfs:domain :Claim ;
    rdfs:range :VerificationStatus .

:hasCorrection a owl:ObjectProperty ;
    rdfs:label "has correction" ;
    rdfs:domain :Post ;
    rdfs:range :Correction .

:correctsClaim a owl:ObjectProperty, owl:AsymmetricProperty, owl:IrreflexiveProperty ;
    rdfs:label "corrects claim" ;
    rdfs:domain :Correction ;
    rdfs:range :Claim .

:mentions a owl:ObjectProperty ;
    rdfs:label "mentions" ;
    rdfs:domain :InformationUnit ;
    rdfs:range :Entity .

:replyTo a owl:ObjectProperty, owl:FunctionalProperty, owl:AsymmetricProperty, owl:IrreflexiveProperty ;
    rdfs:label "reply to" ;
    rdfs:domain :Post ;
    rdfs:range :Post ;
    rdfs:comment "Indicates this post is a reply to another post" .

:quotes a owl:ObjectProperty, owl:AsymmetricProperty, owl:IrreflexiveProperty ;
    rdfs:label "quotes" ;
    rdfs:domain :Post ;
    rdfs:range :Post ;
    rdfs:comment "Indicates this post quotes another post" .

:hasSource a owl:ObjectProperty ;
    rdfs:label "has source" ;
    rdfs:domain :InformationUnit ;
    rdfs:range :Source ;
    rdfs:comment "Links content to its information source" .

:hasSentiment a owl:ObjectProperty, owl:FunctionalProperty ;
    rdfs:label "has sentiment" ;
    rdfs:domain :InformationUnit ;
    rdfs:range :Sentiment ;
    rdfs:comment "The emotional tone of the content" .

:relatedTo a owl:ObjectProperty, owl:SymmetricProperty ;
    rdfs:label "related to" ;
    rdfs:domain :Claim ;
    rdfs:range :Claim ;
    rdfs:comment "Indicates two claims are topically related" .

:contradicts a owl:ObjectProperty, owl:SymmetricProperty, owl:IrreflexiveProperty ;
    rdfs:label "contradicts" ;
    rdfs:domain :Claim ;
    rdfs:range :Claim ;
    rdfs:comment "Indicates two claims are mutually contradictory" .

:linkedToWikidata a owl:ObjectProperty, owl:FunctionalProperty ;
    rdfs:label "linked to Wikidata" ;
    rdfs:domain :Entity ;
    rdfs:range wd:Q35120 ;
    rdfs:comment "Links entity to its Wikidata identifier" .

:hasAnnotation a owl:ObjectProperty ;
    rdfs:label "has annotation" ;
    rdfs:domain :Claim ;
    rdfs:range :PersuasionAnnotation ;
    rdfs:comment "Links a claim to its persuasion annotation" .

:annotatesTechnique a owl:ObjectProperty, owl:FunctionalProperty ;
    rdfs:label "annotates technique" ;
    rdfs:domain :PersuasionAnnotation ;
    rdfs:range :PersuasionTechnique ;
    rdfs:comment "The persuasion technique detected in this annotation" .

# ========================================
# DATA PROPERTIES
# ========================================

:postId a owl:DatatypeProperty ;
    rdfs:label "post ID" ;
    rdfs:domain :Post ;
    rdfs:range xsd:string .

:hasContent a owl:DatatypeProperty ;
    rdfs:label "has content" ;
    rdfs:domain :InformationUnit ;
    rdfs:range xsd:string ;
    rdfs:comment "Generic content property for posts (text, image references, etc.)" .

:hasText a owl:DatatypeProperty ;
    rdfs:subPropertyOf :hasContent ;
    rdfs:label "has text" ;
    rdfs:domain :Post ;
    rdfs:range xsd:string ;
    rdfs:comment "The textual content of a post" .

:hasImage a owl:DatatypeProperty ;
    rdfs:subPropertyOf :hasContent ;
    rdfs:label "has image" ;
    rdfs:domain :Post ;
    rdfs:range xsd:anyURI ;
    rdfs:comment "URI reference to an image in the post" .

:claimText a owl:DatatypeProperty ;
    rdfs:label "claim text" ;
    rdfs:domain :Claim ;
    rdfs:range xsd:string .

:evidenceText a owl:DatatypeProperty ;
    rdfs:label "evidence text" ;
    rdfs:domain :Evidence ;
    rdfs:range xsd:string .

:evidenceSource a owl:DatatypeProperty ;
    rdfs:label "evidence source" ;
    rdfs:domain :Evidence ;
    rdfs:range xsd:anyURI .

:entityName a owl:DatatypeProperty ;
    rdfs:label "entity name" ;
    rdfs:domain :Entity ;
    rdfs:range xsd:string .

:wikidataId a owl:DatatypeProperty ;
    rdfs:label "Wikidata ID" ;
    rdfs:domain :Entity ;
    rdfs:range xsd:string .

:correctionText a owl:DatatypeProperty ;
    rdfs:label "correction text" ;
    rdfs:domain :Correction ;
    rdfs:range xsd:string .

:confidenceScore a owl:DatatypeProperty ;
    rdfs:label "confidence score" ;
    rdfs:domain :PersuasionAnnotation ;
    rdfs:range xsd:float ;
    rdfs:comment "LLM confidence in technique detection (0-1)" .

:explanation a owl:DatatypeProperty ;
    rdfs:label "explanation" ;
    rdfs:domain :PersuasionAnnotation ;
    rdfs:range xsd:string ;
    rdfs:comment "Explanation for why the technique was detected" .

:timestamp a owl:DatatypeProperty ;
    rdfs:label "timestamp" ;
    rdfs:domain :InformationUnit ;
    rdfs:range xsd:dateTime .

:author a owl:DatatypeProperty ;
    rdfs:label "author" ;
    rdfs:domain :Post ;
    rdfs:range xsd:string .

:platform a owl:DatatypeProperty ;
    rdfs:label "platform" ;
    rdfs:domain :Post ;
    rdfs:range xsd:string ;
    rdfs:comment "Social media platform (e.g., Twitter, Facebook)" .

:shareCount a owl:DatatypeProperty ;
    rdfs:label "share count" ;
    rdfs:domain :Post ;
    rdfs:range xsd:integer ;
    rdfs:comment "Number of times the post was shared/retweeted" .

:likeCount a owl:DatatypeProperty ;
    rdfs:label "like count" ;
    rdfs:domain :Post ;
    rdfs:range xsd:integer ;
    rdfs:comment "Number of likes/favorites on the post" .

:replyCount a owl:DatatypeProperty ;
    rdfs:label "reply count" ;
    rdfs:domain :Post ;
    rdfs:range xsd:integer ;
    rdfs:comment "Number of replies to the post" .

:credibilityScore a owl:DatatypeProperty ;
    rdfs:label "credibility score" ;
    rdfs:domain :Source ;
    rdfs:range xsd:float ;
    rdfs:comment "Assessed credibility of the source (0-1)" .

:sentimentScore a owl:DatatypeProperty ;
    rdfs:label "sentiment score" ;
    rdfs:domain :InformationUnit ;
    rdfs:range xsd:float ;
    rdfs:comment "Numerical sentiment polarity (-1 to 1)" .

:fragmentStart a owl:DatatypeProperty ;
    rdfs:label "fragment start" ;
    rdfs:domain :Claim ;
    rdfs:range xsd:integer ;
    rdfs:comment "Start position of claim text fragment" .

:fragmentEnd a owl:DatatypeProperty ;
    rdfs:label "fragment end" ;
    rdfs:domain :Claim ;
    rdfs:range xsd:integer ;
    rdfs:comment "End position of claim text fragment" .

# ========================================
# PROVENANCE (PROV-O)
# ========================================

:wasGeneratedBy a owl:ObjectProperty, owl:FunctionalProperty ;
    rdfs:label "was generated by" ;
    rdfs:domain :InformationUnit ;
    rdfs:range prov:Agent ;
    rdfs:comment "Links data to the process/agent that generated it" ;
    owl:equivalentProperty prov:wasGeneratedBy .

:LLMAgent a owl:Class ;
    rdfs:label "LLM Agent" ;
    rdfs:subClassOf prov:Agent ;
    rdfs:comment "An AI agent (e.g., GPT-4, MUSE) that performs annotation" .

:modelName a owl:DatatypeProperty ;
    rdfs:label "model name" ;
    rdfs:domain :LLMAgent ;
    rdfs:range xsd:string .

:modelVersion a owl:DatatypeProperty ;
    rdfs:label "model version" ;
    rdfs:domain :LLMAgent ;
    rdfs:range xsd:string .
